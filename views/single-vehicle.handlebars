    <div class='vehicle-post'>
      <article class='card'>
        <div class='card-header flex-row justify-space-between'>
          <h2>{{vehicle.model}}</h2>
        </div>
        <div class='post-body'>
          <img src='/Images/{{vehicle.filename}}' alt='{{vehicle.model}}' />
          <p>Year: {{vehicle.year}}</p>
          <p>Price: {{vehicle.price}}</p>
          <p>Category: {{vehicle.category}}</p>

          <a href='#' class='btn btn-primary' id="card-btn">Add To Cart!</a>
        </div>
      </article>

      {{#if vehicle.reviews}}
        <section class='card'>
          <div class='card-header'>
            <h3>Reviews</h3>
          </div>

          <div class='card-body'>
            {{#each vehicle.reviews as |review|}}
              <div>
                <p>
                  {{review}}
                </p>
                <p>
                  Posted by
                  {{user.username}}
                </p>
              </div>
            {{/each}}
          </div>
        </section>
      {{/if}}

      <form id='new-review-form' class='card'>
        <div class='card-header'>
          <h3>Add New Review:</h3>
        </div>

        <div class='card-body'>
          <input type='hidden' name='vehicle_id' value='{{vehicle.id}}' />

          <textarea name='review-body' class='form-input'></textarea>

          <button type='submit' class="btn btn-primary" id="card-btn">Submit</button>
        </div>
      </form>
    </div>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js'
    ></script>
    <script src='/js/cart.js'></script>
    <script src='/js/review.js'></script>